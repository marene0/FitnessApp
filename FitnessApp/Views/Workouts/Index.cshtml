@model IEnumerable<FitnessApp.Model.Workout>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkoutName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkoutName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WorkoutId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WorkoutId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WorkoutId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
